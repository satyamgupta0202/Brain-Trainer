<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="ready"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/goButton"
        android:layout_width="165dp"
        android:layout_height="103dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:background="#087E0D"
        android:onClick="ready"
        android:text="GO!!"
        android:textColor="#0F1010"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:backgroundTint="#50D655"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameLayout"
        android:layout_width="453dp"
        android:layout_height="625dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="280dp"
            android:layout_height="287dp"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="78dp"
            android:layout_marginRight="78dp"
            app:columnCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editSum"
            app:rowCount="2">

            <Button
                android:id="@+id/button1"
                android:layout_width="142dp"
                android:layout_height="141dp"
                android:hint="40"
                android:onClick="clicked"
                android:tag="1"
                android:textColor="#121111"
                android:textColorHint="#191818"
                android:textSize="50sp"
                android:textStyle="bold"
                app:backgroundTint="#CF3F1A" />

            <Button
                android:id="@+id/button2"
                android:layout_width="143dp"
                android:layout_height="140dp"
                android:hint="40"
                android:onClick="clicked"
                android:tag="2"
                android:textColor="#121111"
                android:textColorHint="#191818"
                android:textSize="50sp"
                android:textStyle="bold"
                app:backgroundTint="#CB69DC" />

            <Button
                android:id="@+id/button3"
                android:layout_width="153dp"
                android:layout_height="141dp"
                android:hint="40"
                android:onClick="clicked"
                android:tag="3"
                android:textColor="#121111"
                android:textColorHint="#191818"
                android:textSize="50sp"
                android:textStyle="bold"
                app:backgroundTint="#5DED35" />

            <Button
                android:id="@+id/button4"
                android:layout_width="139dp"
                android:layout_height="142dp"
                android:hint="40"
                android:onClick="clicked"
                android:tag="4"
                android:textColor="#121111"
                android:textColorHint="#191818"
                android:textSize="50sp"
                android:textStyle="bold"
                app:backgroundTint="#D8B755" />
        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/outcome"
            android:layout_width="181dp"
            android:layout_height="71dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp"
            android:background="#FBFBFB"
            android:gravity="center"
            android:hint="Answer"
            android:textColorHint="#0C0C0C"
            android:textSize="46sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

        <EditText
            android:id="@+id/editSum"
            android:layout_width="117dp"
            android:layout_height="63dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="52dp"
            android:background="#55D15A"
            android:ems="10"
            android:gravity="center"
            android:hint="100 + 100"
            android:inputType="number"
            android:textColorHint="#070707"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            app:layout_constraintEnd_toStartOf="@+id/editScore"
            app:layout_constraintStart_toEndOf="@+id/timer"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/timer"
            android:layout_width="82dp"
            android:layout_height="59dp"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="56dp"
            android:background="#F8E74F"
            android:ems="10"
            android:gravity="center"
            android:hint="5s"
            android:inputType="number"
            android:textColorHint="#0C0C0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            app:layout_constraintEnd_toStartOf="@+id/editSum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editScore"
            android:layout_width="92dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="78dp"
            android:layout_marginRight="78dp"
            android:background="#E3E32A"
            android:ems="10"
            android:gravity="center"
            android:hint="00/20"
            android:inputType="number"
            android:textColorHint="#0E0E0E"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editSum"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/playAgain"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:layout_marginStart="179dp"
            android:layout_marginLeft="179dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="146dp"
            android:layout_marginRight="146dp"
            android:layout_marginBottom="40dp"
            android:onClick="playAgain"
            android:text="Play Again"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/outcome" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>